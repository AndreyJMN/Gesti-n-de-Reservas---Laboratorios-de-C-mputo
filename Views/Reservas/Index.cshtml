@model IEnumerable<Gestión_de_Reservas___Laboratorios_de_Cómputo.Models.Reserva>

@{
    ViewData["Title"] = "Reservas de Laboratorio";
}

<div class="bg-light border-bottom mb-4">
    <nav class="navbar navbar-expand-lg navbar-light container">
        <span class="navbar-brand fw-bold">
            CAMPUS TECH
        </span>
        <span class="ms-auto text-muted">Sistema de reservas</span>
    </nav>
</div>

<div class="container mb-5">
    <h1 class="mb-4">Reservas Registradas</h1>

    @if (TempData["Mensaje"] is string msg)
    {
        <div class="alert alert-success" role="alert">
            @msg
        </div>
    }

    <p>
        <a class="btn btn-success" asp-controller="Reservas" asp-action="Create">+ Nueva Reserva</a>
    </p>

    @if (!Model.Any())
    {
        <p class="text-muted">No hay reservas registradas.</p>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Laboratorio</th>
                            <th>Fecha</th>
                            <th>Hora inicio</th>
                            <th>Hora fin</th>
                            <th>Motivo</th>
                            <th>Código</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td>@p.NombreProfesor</td>
                                <td>@p.Email</td>
                                <td>@p.Laboratorio</td>
                                <td>@p.Fecha?.ToString("yyyy-MM-dd")</td>
                                <td>@p.HoraInicio?.ToString(@"hh\:mm")</td>
                                <td>@p.HoraFin?.ToString(@"hh\:mm")</td>
                                <td>@p.Motivo</td>
                                <td>@p.CodReserva</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
